<div class="row">
  <div class="col-md-8">
    <div class="page-header">
       <h2><%= @user.fullname %>
       	<% if can? :update, @user %>
		<%= link_to 'Edit', edit_user_path(@user.id),class: "btn btn-info pull-right"   %>
		<%end%>
		<% if can? :destroy, @user %>
		<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %>
		<% end %>
       </h2>
       </div>
         Email : <%= @user.email %></br>
         Phone : <%= @user.phone %></br>
         Role  : <%= @user.role.name %></br>

  </div>
</div>
