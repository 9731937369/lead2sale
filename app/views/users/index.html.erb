<div class="row">
    <div class="col-md-6">
       <div class="page-header">
         <h2>Listing Users</h2>
       </div>
       <table class="table table-bordered"  id="ListUser" >
         <thead>
         	<tr>
              <th>Full Name</th>
              <th>Email </th>
              <th>Phone</th>
              <th>Role</th>
               <th>ACTION</th>
            </tr>
         </thead>
          <tbody>
             <% @users.each do |user| %>
              <% if user.role.name == "Sales Associate"%>
               <tr>
                  <td><%= user.fullname %></td>
          				<td><%= user.email %></td>
          				<td><%= user.phone %></td>
          				<td><%= user.role.name %></td>
          				
          				<td><%= link_to "show", user %></td>
          				<%end%>
               </tr>
             <% end %>
          </tbody>
       </table>
    </div>
    <div class="col-md-6">
       <div class="page-header">
       <h2>New USer</h2>
       </div>
      <% if can? :create, @user%>
      <div id="errorMsg" ></div>
    	<%= render "form" %>
    	<%end%>
    </div>

</div>
<script type="text/javascript">
  $(document).ready(function(){
      $('#ListUser').DataTable();
  });
</script>


