<div class = "page-header"><h2>All Prospects in Pipeline</h2></div>
<table id="pipeline">
	<thead>
		<tr>
			<th>Full Name</th>
			<th>Email</th>
			<th>Stage</th>
			<th>Update Pipeline</th>
		</tr>
	</thead>
	<tbody>
		<% @prospects.each do |prospect| %>
		<% if user_signed_in? && current_user.id == prospect.managed_by || current_user.role.name == "Sales Manager" %>
		<tr>
			<td><%= prospect.fullname %></td>
			<td><%= prospect.email %></td>
			<td><%= prospect.stage.name %></td>
			<td><%= form_for prospect do |f|%>
					<%= f.hidden_field :stage_id, value: "5a7d5fb7e6fc8c280c000003"  %>
					<%= f.submit "Negotiate",class: "btn btn-default" %>
				<% end %>
				<%= form_for prospect do |f|%>
					<%= f.hidden_field :stage_id, value: "5a7d5fb7e6fc8c280c000004"  %>
					<%= f.submit "Won", class: "btn btn-success" %>
				<% end %>
				<%= form_for prospect do |f|%>
					<%= f.hidden_field :stage_id, value: "5a7d5fb7e6fc8c280c000005"  %>
					<%= f.submit "Lost", class: "btn btn-danger" %>
				<% end %>
			</td>
		</tr>
		<% end %>
	<% end %>
	</tbody>
</table>