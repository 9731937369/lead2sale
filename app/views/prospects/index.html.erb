<div class="row">
  <div class='col-md-8'>
    <table class = "table" id = "datalist">
  <thead>
    <tr>
      <th>Associator</th>
      <th>Fullname</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Stage</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @prospects.each do |prospect| %>
      <% if user_signed_in? && current_user.id == prospect.managed_by %>
      <tr>
        <td><%= link_to prospect.user.fullname, prospect %></td>
        <td><%= prospect.fullname %></td>
        <td><%= prospect.email %></td>
        <td><%= prospect.phone %></td>
        <td><%= prospect.stage.name %></td>
        <td>
        <% if user_signed_in? %>
          <% if (can? :update, prospect)%>
            <%= link_to 'Edit', edit_prospect_path(prospect) %>
          <% end %>
          <% if (can? :destroy, prospect) %>
            <%= link_to 'Destroy', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
</div>

 <style>
  .modal-header, h4, .close {
      background-color: #5cb85c;
      color:white !important;
      text-align: center;
      font-size: 30px;
  }
  .modal-footer {
      background-color: #f9f9f9;
  }
  </style>
<% if user_signed_in? %>
<div class="col-md-4">
  <button type="button" class="btn btn-info btn-lg" id="myBtn">Add Prospect</button>
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header" style="padding:15px 20px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4</span> Please Fill The Below Details</h4>
        </div>
        <div class="modal-body" style="padding:40px 50px;">
          
          <%= render 'form' %>
        
        </div>
      </div>      
    </div>
  </div> 
</div>
<% end %>
<script>
$(document).ready(function(){
    $("#myBtn").click(function(){
        $("#myModal").modal();
    });
});
</script>
